{% extends 'base.html.twig' %}

{% block title %}Carousel index{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center">
        <h1>Carousel</h1>
        <a href="{{ path('carousel_new') }}" class="btn btn-outline-info">Ajouter</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Image</th>
                <th>Titre</th>
                <th>Texte</th>
                <th>Active</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for carousel in carousels %}
            <tr>
                <td>{{ carousel.id }}</td>
                <td>{{ carousel.nom }}</td>
                <td><img src="{{ asset('images/carousels/' ~ carousel.image) }}" alt="image" class="admin-img-list"></td>
                <td>{{ carousel.titre }}</td>
                <td>{{ carousel.texte }}</td>
                <td>{{ carousel.active ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('carousel_show', {'id': carousel.id}) }}" class="btn btn-outline-info"><i class="fas fa-eye"></i></a>
                    <a href="{{ path('carousel_edit', {'id': carousel.id}) }}" class="btn btn-outline-info"><i class="fas fa-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
